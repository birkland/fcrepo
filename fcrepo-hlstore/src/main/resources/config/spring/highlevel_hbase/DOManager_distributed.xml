<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                         http://www.springframework.org/schema/context
                         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="org.fcrepo.server.storage.DOManager"
		class="org.fcrepo.server.storage.distributed.DistributedDOManager">

		<property name="PIDGenerator" ref="org.fcrepo.server.management.PIDGenerator" />
		<property name="DeploymentManager"
			ref="org.fcrepo.server.storage.distributed.DeploymentManager" />
		<property name="HighlevelStorage"
			ref="org.fcrepo.server.storage.highlevel.HighlevelStorage" />
		<property name="FieldSearch" ref="org.fcrepo.server.search.FieldSearch" />
		<property name="DOValidator" ref="org.fcrepo.server.validation.DOValidator" />
		<property name="DOTranslator" ref="org.fcrepo.server.storage.translation.DOTranslator" />

		<property name="DOReaderCache" ref="org.fcrepo.server.storage.DOReaderCache" />

		<constructor-arg index="0">
			<map />
		</constructor-arg>
		<constructor-arg index="1" ref="org.fcrepo.server.Server" />
		<constructor-arg index="2" type="java.lang.String"
			value="org.fcrepo.server.storage.DOManager" />
	</bean>
	
	<bean id="org.fcrepo.server.storage.DOReaderCache" class="org.fcrepo.server.storage.DOReaderCache">
	  <constructor-arg index="0" value="20" />
	  <constructor-arg index="1" value="5" />
	</bean>
</beans>