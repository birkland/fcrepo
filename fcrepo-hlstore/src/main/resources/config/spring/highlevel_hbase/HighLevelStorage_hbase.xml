<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                         http://www.springframework.org/schema/context
                         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="org.fcrepo.server.storage.highlevel.HighlevelStorage"
		class="org.fcrepo.server.storage.highlevel.hbase.HBaseHighlevelStorage">

		<property name="HBaseRoot" value="file:///home/birkland/hadoop/data_hbase" />
		<property name="HBaseTable" value="fedora" />
		<property name="DOTranslator" ref="org.fcrepo.server.storage.translation.DOTranslator"/>

		<constructor-arg index="0">
			<map />
		</constructor-arg>
		<constructor-arg index="1" ref="org.fcrepo.server.Server" />
		<constructor-arg index="2" type="java.lang.String"
			value="org.fcrepo.server.storage.highlevel.HighlevelStorage" />
	</bean>
</beans>